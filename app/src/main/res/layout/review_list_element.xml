<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/review_element_layout"
    android:layout_height="wrap_content"
    android:background="@drawable/local_drink"
    android:layout_margin="5dp"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="118dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/local_drink"
        android:contentDescription="TODO" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/ReviewLinearLayout2"
            android:paddingTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/review_view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Id" />

            <TextView
                android:id="@+id/review_view_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Name" />

            <TextView
                android:id="@+id/review_view_brewery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Brewery" />

            <TextView
                android:id="@+id/review_view_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Style" />

            <TextView
                android:id="@+id/review_view_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Comment"

                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>